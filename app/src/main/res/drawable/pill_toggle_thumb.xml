<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:height="25dp" android:width="0dp"/>
            <stroke android:color="@color/switchThumbkNormal" android:width="2dp"/>
            <corners android:bottomRightRadius="1dp"
                android:bottomLeftRadius="10dp"
                android:topRightRadius="1dp"
                android:topLeftRadius="10dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:height="25dp" android:width="0dp"/>
            <!--stroke android:color="@color/switchThumbActive" android:width="2dp"/-->
            <solid android:color="@color/switchThumbActive"/>
            <corners android:bottomRightRadius="10dp"
                android:bottomLeftRadius="1dp"
                android:topRightRadius="10dp"
                android:topLeftRadius="1dp"/>
        </shape>
    </item>
</selector>